    {% import '../macros/_about_template.njk' as template %}
    {% import '../macros/_title.njk' as title %}
    {% import '../macros/_notice.njk' as notice %}
    {% import '../macros/_tabs.njk' as block %}
    {% import '../macros/_faq.njk' as faq %}
    {% import '../macros/_reviews.njk' as comments %}
<div class="content">

    {# Main section #}
    <section class="section section_product_main">
        <div class="section__inner">
            {{ template.about(
                data.about._main,
                title.page(data.about._main.content.title)
            ) }}
        </div>
    </section>

    {# Watch section #}
    <section class="section section_product_description">
        <div class="section__inner">
            {{ template.about(
                data.about._description,
                title.section(data.about._description.content.title, 'about'),
                true,
                false,
                notice.text(data.about._description.notice)
            ) }}
        </div>
    </section>
    {# Calculator section #}
    <section class="section section_calculator">
        <div class="section__inner">
            {% include '../common.blocks/_calculator.njk' %}
        </div>
    </section>
    {# How it works section #}
    <section class="section section_how-it-works">
        <div class="section__inner section__inner_small">
            <h2 class="section__title">How it works</h2>
            <p class="section__description">Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.</p>
            <div class="steps-slider">
                <nav class="steps-slider__nav"></nav>
                <div class="steps-slider__wrapper">
                    {% for i in range(0, 4) %}
                    <div class="steps-slider__wrapper__slide">
                        <h3 class="section__title_sub">Step {{ i + 1 }}</h3>
                    </div>
                    {% endfor %}
                </div>
            </div>
            <h2 class="section__title section__title_start">Sed ut perspiciatis</h2>
            {{ block.tabs(data.tabs.how_it_works) }}
        </div>
    </section>
    {# Review section #}
    <section class="section section_review">
        <div class="section__inner">
            <h2 class="section__title">Reviews</h2>
            <p class="section__description">Nam libero tempore, cum soluta nobis est </p>
            {{ comments.reviews(data.reviews) }}
        </div>
    </section>
    {# Benefits section #}
    <section class="section section_product_benefits">
        <div class="section__inner">
            {{ template.about(
                data.about._benefits,
                title.section(data.about._benefits.content.title, 'about')
            ) }}
        </div>
        <div class="section__inner section__inner_small">
            {{ block.tabs(data.tabs.info) }}
        </div>
    </section>

    {# Scopes section #}
    <section class="section section_product_scopes">
        <div class="section__inner">
            {{ template.about(
                data.about._scopes,
                title.section(data.about._scopes.content.title, 'about'),
                true,
                true
            ) }}
        </div>
    </section>

    {# Info section #}
    <section class="section section_product_info">
        <div class="section__inner">
            {{ template.about(
                data.about._info,
                title.section(data.about._info.content.title, 'about'),
                false,
                true
            ) }}
        </div>
        <div class="section__inner">
            {{ template.about(
                data.about._with_notice_image,
                '',
                true,
                true,
                notice.text(data.about._with_notice_image.notice),
                true
            ) }}
        </div>
    </section>

    {# FAQ section #}
    <section class="section section_faq">
        <div class="section__inner section__inner_middle">
            <h2 class="section__title section__title_start">FAQ</h2>
            {{ faq.list(data.faq) }}
            <div class="section_center">
                <a href="#" class="button button_size_big button_width_short button_color_primary">Try for free</a>
            </div>
        </div>
    </section>
</div>