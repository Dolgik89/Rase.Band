{% macro about(data, title, image_first = false, mobile_image_first = false, notice = '', notice_image = false) %}

    <div class="section__about">

        {% if image_first %}
            <div class="section__about__image{% if mobile_image_first %} section__about__image_first{% endif %}{% if notice_image %} with-notice-image{% endif %}">
                {% if not notice_image %}
                    <img src="images/{{ data.image.src }}" alt="{{ data.image.alt }}">
                    {% if notice %} {{ notice }} {% endif %}
                {% else %}
                    <div class="notice_image">
                        {{ notice }}
                    </div>
                {% endif %}
            </div>
        {% endif %}

        <div class="section__about__text{% if mobile_image_first %} section__about__text_last{% endif %}">
            {{ title }}
            <article class="section__about__text__inner">
                {{ data.content.text | safe }}
            </article>
            {% if data.button.text %}
                <a href="#" class="button button_size_{{ data.button.size}} {% if data.button.width %}{{ 'button_width_' + data.button.width }}{% endif %} button_color_primary">{{ data.button.text }}</a>
            {% endif %}
        </div>

        {% if not image_first %}
            <div class="section__about__image{% if mobile_image_first %} section__about__image_first{% endif %}{% if notice_image %} with-notice-image{% endif %}">
                {% if not notice_image %}
                    <img src="images/{{ data.image.src }}" alt="{{ data.image.alt }}">
                    {% if notice %} {{ notice }} {% endif %}
                {% else %}
                    <div class="notice_image">
                        {{ notice }}
                    </div>
                {% endif %}
            </div>
        {% endif %}

    </div>
{% endmacro %}