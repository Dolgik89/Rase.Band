{% macro reviews(list) %}
    <div class="reviews">
        <div class="reviews__wrapper">
            {% for review in list %}
                {# Review start #}
                <div class="reviews__slide">
                    <div class="reviews__item">
                        <div class="reviews__item__header">
                            <div class="reviews__rating">
                                <div class="reviews__rating__points">{{ review.rating }}</div>
                                <div class="reviews__rating__stars">
                                    {% for star in range(0, (review.rating | int)) %}
                                    <div class="reviews__rating__star">
                                        <img src="images/review_star.svg" alt="{{ star }}">
                                    </div>
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="reviews__item__content">
                            <p>{{ review.comment }}</p>
                        </div>
                        <div class="reviews__item__footer">
                            <div class="reviews__author">
                                <div class="reviews__author__photo"></div>
                                <div class="reviews__author__info">ID: {{ review.authorID }}</div>
                            </div>
                            <div class="reviews__category">
                                <p>{{ review.category }}|{{ review.subCategory }}</p>
                            </div>
                        </div>
                    </div>
                </div>
                {# Review END #}
            {% endfor %}
        </div>
        <div class="reviews__read-more">
            <a href="#">Read more</a>
        </div>
        <div class="reviews__pagination"></div>
    </div>
{% endmacro %}