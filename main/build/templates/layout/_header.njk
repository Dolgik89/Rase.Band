<header class="header">
    <div class="header__inner">
        <a href="#" class="header__logo">
            <img src="images/logo.svg" alt="Product">
        </a>
        <nav class="header__menu">
            {% include '../common.blocks/_search-form.njk' %}
            <a href="#" class="header__menu__call-button" data-popup="popup_contacts_us">Call us</a>
            {% set header_menu = [
                ['About', '#'],
                ['Product', '#'],
                ['FAQ', '#'],
                ['Contact', '#']
            ] %}
            <ul class="header__menu__list">
                {% for page, link in header_menu %}
                <li class="header__menu__item">
                    <a href="{{ link }}">{{ page }}</a>
                </li>
                {% endfor %}
            </ul>
            <a href="#" class="button button_size_small button_color_primary">Download</a>
            <a href="#" class="button button_size_small button_color_transparent">Sign up</a>
        </nav>
        <button class="header__mobile-button">
            <span></span>
        </button>
    </div>
</header>